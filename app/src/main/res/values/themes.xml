<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DarkZone" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/red</item>
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="Theme.DarkZone" parent="Base.Theme.DarkZone" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@android:color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/darkzone_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.DarkZone</item>
    </style>
</resources>